
@model ShareMusic.Mvc.Data.ShareMusicMvcUser
@{
    ViewData["Title"] = "Xóa tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa tài khoản</h1>

<h3>Bạn chắc chắn muốn xóa tài khoản này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên người dùng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /><br />
        <a asp-action="Index">Quay lại</a>
    </form>
</div>

@model ShareMusic.Mvc.ViewModels.UserViewModels
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-4">
        <h2>Thông tin cơ bản</h2>
    </div>
    <div class="col-8">
        <h2>Các bài đã đăng</h2>
    </div>
</div>
<div class="row">
    <div class="col-4 mt-4">
        <div class="row">
            <div class="col-5">
                <h6>Tên người dùng</h6>

            </div>
            <div class="col-7">
                <p>@Model.Username</p>
            </div>
        </div>
        <div class="row">
            <div class="col-5">
                <h6>Ngày tham gia</h6>

            </div>
            <div class="col-7">
                <p>@Model.JoinTime</p>
            </div>
        </div>
    </div>
    <div class="col-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Tiêu đề
                    </th>
                    <th>
                        Chủ đề
                    </th>
                    <th>
                        Mô tả
                    </th>
                    <th>
                        Thời gian đăng
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Posts)
                {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Posts">@Html.DisplayFor(modelItem => item.Title)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostTime)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


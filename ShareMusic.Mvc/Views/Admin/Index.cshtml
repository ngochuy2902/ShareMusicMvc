
@model IEnumerable<ShareMusic.Mvc.Data.ShareMusicMvcUser>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-3 text-center">Danh sách các tài khoản</h1>
<form asp-action="Index" method="get" class="my-5 text-center">
    <div class="form-actions no-color">
        <p>
            Tìm theo tên: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Tìm" class="btn btn-primary" />
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên đăng nhập
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">Thời gian tham gia</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinTime)

                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
